<p id="notice"><%= notice %></p>

<h1>Sites</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Acct mgr</th>
      <th>Branch mgr</th>
      <th>Workorder</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= site.number %></td>
        <td><%= site.phone %></td>
        <td><%= site.address %></td>
        <td><%= site.acct_mgr %></td>
        <td><%= site.branch_mgr %></td>
        <td><%= site.workorder_id %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

